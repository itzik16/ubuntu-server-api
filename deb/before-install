#!/bin/bash
set -e

echo "############################################"
echo "## Preparing to install Ubuntu Server API ##"
echo '############################################'

# Add usg-api User
/usr/sbin/adduser --system --disabled-password --no-create-home --group usgapi
echo 'usgapi ALL=(ALL:ALL) NOPASSWD: /usr/bin/node' >> /etc/sudoers